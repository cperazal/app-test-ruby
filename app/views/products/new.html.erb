<h1> Nuevo producto </h1>

<%= form_with url: '/products', model: @product do |form| %>

<div>
    <%= form.label :title %>
    <%= form.text_field :title %>
</div>

<div>
    <%= form.label :description %>
    <%= form.text_area :description %>
</div>

<div>
    <%= form.label :price %>
    <%= form.number_field :price %>
</div>

<%= form.submit %>

<% end %>