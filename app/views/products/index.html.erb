<h1>Lista de productos</h1>
<hr>

<% @products.each do |product| %>

    <ul>
        <li>
            <%= link_to product_path(product.id), class: 'product' do %>          
                <h2><%= product.title %> </h2>
                <p> <%= product.description %> </p>
                <p> <%= product.price %>$ </p>
            <% end %>
        </li>
    </ul>
    

<% end %>